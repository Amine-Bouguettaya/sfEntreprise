{% extends 'base.html.twig' %}

{% block title %}Liste des Entreprise{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    
    {% for entreprise in entreprises %}
        <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}">{{ entreprise }}</a>
        <a href="{{ path('edit_entreprise',{'id': entreprise.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('delete_entreprise', {'id': entreprise.id}) }}" class="btn btn-danger">Delete</a>
        <br>
    {% endfor %}

{% endblock %}
